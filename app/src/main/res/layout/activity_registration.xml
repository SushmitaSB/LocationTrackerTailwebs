<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_light_shade"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@drawable/univ_logo"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="54dp"
            android:layout_gravity="center_horizontal" />

        <!-- Name Label -->

        <EditText android:id="@+id/firstNameET"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:inputType="text"
            android:layout_margin="5sp"
            android:gravity="center"
            android:background="@drawable/edit_text_shape"
            android:hint="First Name"/>

        <EditText android:id="@+id/lastNameET"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:inputType="text"
            android:layout_margin="5sp"
            android:gravity="center"
            android:background="@drawable/edit_text_shape"
            android:hint="Second Name"/>

        <!-- Email Label -->

        <EditText android:id="@+id/emailid"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/edit_text_shape"
            android:inputType="textEmailAddress"
            android:layout_margin="5sp"
            android:gravity="center"
            android:hint="Email" />


        <!-- Password Label -->

        <EditText android:id="@+id/passId"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:inputType="textPassword"
            android:layout_margin="5sp"
            android:gravity="center"
            android:background="@drawable/edit_text_shape"
            android:hint="Password"/>

        <!-- Confirm Password Label -->

        <EditText android:id="@+id/conPassId"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:inputType="textPassword"
            android:layout_margin="5sp"
            android:gravity="center"
            android:background="@drawable/edit_text_shape"
            android:hint="Confirm Password"/>

        <Button
            android:id="@+id/btId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:text= "@string/signIn"/>

        <TextView android:id="@+id/loginId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColor="@color/light_blue"
            android:text= "@string/already_have_an_account"
            android:gravity="center"
            android:textSize="16dip"/>

    </LinearLayout>

</LinearLayout>